
@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - >VentexiFrontend</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <div class="portal-wrapper">
        <header>
            <div class="header-info">
                <h2>@ViewData["Title"]</h2>
                <span class="header-info-text">Hello TEST, Welcome back</span>
                @* ——— STUB LOGIN/LOGOUT ——— *@
                <div class="stub-auth-links">
                    <a asp-controller="Account"
                       asp-action="Login"
                       asp-route-role="User">
                        Login as User
                    </a>
                    <a asp-controller="Account"
                       asp-action="Login"
                       asp-route-role="Admin">
                        Login as Admin
                    </a>
                    <form asp-controller="Account"
                          asp-action="Logout"
                          method="post"
                          style="display:inline">
                        @Html.AntiForgeryToken()
                        <button type="submit"
                                style="background:none;border:none;padding:0;cursor:pointer">
                            Sign Out
                        </button>
                    </form>
                </div>
            </div>

            <input type="text" id="nav-search" class="header-search" placeholder="Search anything" />

            <div class="header-user-dropdown">
                <div class="header-user">
                    <div class="header-user-profile">
                        <div class="header-user-avatar">TEST</div>
                        <div class="header-user-info">
                            <div class="header-user-name">TEST</div>
                            <div class="header-user-role">Admin</div>
                        </div>
                    </div>
                </div>
                <div class="header-user-dropdown">
                    <div class="header-user-dropdown-content">
                        <a href="#" class="header-user-dropdown-item">Profile Settings</a>
                        <a href="#" class="header-user-dropdown-item">Notifications</a>
                        <a href="#" class="header-user-dropdown-item">Help Center</a>
                    </div>
                </div>
            </div>
        </header>
        <nav class="sidebar">
            <div class="nav-logo">
                <img src="https://ventixe.blob.core.windows.net/ventixe-container/ventixeLogo.svg" alt="Logo" />
            </div>
            <ul class="nav-menu">
                <li class="nav-item">
                    <div class="nav-icon">
                        <img src="https://ventixe.blob.core.windows.net/ventixe-container/grid_view_24dp_000_FILL0_wght400_GRAD0_opsz24.svg" alt="Dashboard" />
                    </div>
                    <a asp-controller="Home" asp-action="Index">
                        <span class="nav-text">Dashboard</span>
                    </a>
                </li>
                <li class="nav-item">
                    <div class="nav-icon">
                        <img src="https://ventixe.blob.core.windows.net/ventixe-container/check_box_24dp_000_FILL0_wght400_GRAD0_opsz24.svg" alt="Bookings" />


                    </div>
                    <a">
                        <span class="nav-text">Bookings</span>
                    </a>
                </li>

                <li class="nav-item">
                    <div class="nav-icon">
                        <img src="https://ventixe.blob.core.windows.net/ventixe-container/receipt_24dp_000_FILL0_wght400_GRAD0_opsz24.svg" alt="Invoices" />
                    </div>
                    <a asp-controller="Invoices" asp-action="Index">
                        <span class="nav-text">Invoices</span>
                    </a>
                </li>

                <li class="nav-item">
                    <div class="nav-icon">
                        <img src="https://ventixe.blob.core.windows.net/ventixe-container/calendar_month_24dp_000_FILL0_wght400_GRAD0_opsz24.svg" alt="Calendar" />
                    </div>
                    <a>
                        <span class="nav-text">Calendar</span>
                    </a>
                </li>
                <li class="nav-item">
                    <div class="nav-icon">
                        <img src="https://ventixe.blob.core.windows.net/ventixe-container/local_activity_24dp_000_FILL0_wght400_GRAD0_opsz24.svg" alt="Events" />
                    </div>
                    <a>
                        <span class="nav-text">Events</span>
                    </a>
                </li>
                <li class="nav-item">
                    <div class="nav-icon">
                        <img src="https://ventixe.blob.core.windows.net/ventixe-container/payments_24dp_000_FILL0_wght400_GRAD0_opsz24.svg" alt="Financials" />
                    </div>
                    <a>
                        <span class="nav-text">Financials</span>
                    </a>
                </li>
                <li class="nav-item">
                    <div class="nav-icon">
                        <img src="https://ventixe.blob.core.windows.net/ventixe-container/photo_library_24dp_000_FILL0_wght400_GRAD0_opsz24.svg" alt="Gallery" />
                    </div>
                    <a>
                        <span class="nav-text">Gallery</span>
                    </a>
                </li>
                <li class="nav-item">
                    <div class="nav-icon">
                        <img src="https://ventixe.blob.core.windows.net/ventixe-container/star_24dp_000_FILL0_wght400_GRAD0_opsz24.svg" alt="Feedback" />
                    </div>
                    <a>
                        <span class="nav-text">Feedback</span>
                    </a>
                </li>

            </ul>


            <div class="nav-banner">
                <img src="https://ventixe.blob.core.windows.net/ventixe-container/Promotional Banner.svg" alt="Logo" />
            </div>


            <a>
                <div class="nav-item">
                    <div class="nav-icon">
                        <img src="https://ventixe.blob.core.windows.net/ventixe-container/logout_24dp_000_FILL0_wght400_GRAD0_opsz24.svg" alt="Logout" />
                    </div>
                    <span class="nav-text">Sign Out</span>
                </div>
            </a>
        </nav>

        <main>
            @RenderBody()
        </main>
        <footer>
            <div class="footer-body">
                <p>Ventixe &copy; @DateTime.Now.Year - All rights reserved</p>
                <div class="footer-links">
                    <a href="#">Privacy Policy</a>
                    <a href="#">Terms and Conditions</a>
                    <a href="#">Contact</a>

                </div>
            </div>

        </footer>

        <script src="~/js/site.js" asp-append-version="true"></script>
        @await RenderSectionAsync("Scripts", required: false)
    </div>

</body>
</html>
